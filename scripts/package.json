{
  "name": "civicsense-backend",
  "version": "1.0.0",
  "type": "module",
  "description": "CivicSense Platform Backend API",
  "main": "backend-server.js",
  "scripts": {
    "start": "node backend-server.js",
    "start:dev": "node --watch backend-server.js",
    "test": "NODE_OPTIONS='--experimental-vm-modules' jest",
    "test:watch": "NODE_OPTIONS='--experimental-vm-modules' jest --watch",
    "test:coverage": "NODE_OPTIONS='--experimental-vm-modules' jest --coverage"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "civicsense": "file:..",
    "cors": "^2.8.5",
    "dotenv": "^17.2.2",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.0",
    "mongoose": "^8.0.0",
    "multer": "^1.4.5-lts.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/multer": "^1.4.11",
    "@types/supertest": "^6.0.2",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "jest": {
    "preset": "default",
    "testEnvironment": "node",
    "extensionsToTreatAsEsm": [
      ".js"
    ],
    "globals": {
      "NODE_OPTIONS": "--experimental-vm-modules"
    },
    "transform": {},
    "testMatch": [
      "**/tests/**/*.spec.js",
      "**/tests/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/uploads/**"
    ]
  },
  "keywords": [
    "civic",
    "reporting",
    "community",
    "api",
    "india",
    "civic-sense"
  ],
  "author": "CivicSense Team",
  "license": "MIT"
}
